{
  "manifest_version": 3,
  "name": "Mail to Claude",
  "version": "1.0.0",
  "description": "Copie un fil d'email Gmail avec un prompt configurable, prêt à coller dans Claude.",
  "permissions": ["clipboardWrite", "storage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
